{% extends "_layouts/default.njk" %}
{% block body %}
  <div class="content">

    <strong>
      Ol√°,
      {{ user.name}}</strong>
    {% if user.provider === false %}
      <p>
        Inicie um agendamento escolhendo um profissional abaixo:
      </p>

      <ul class="providers">
        {% for provider in providers %}
          <li class="provider">
            <div>
              <img src="/files/{{provider.avatar}}">
              <strong>
                {{ provider.name }}
              </strong>
            </div>
            <a href="/app/appointments/new/{{provider.id}}">+</a>
          </li>
        {% endfor %}
      </ul>

    {% else %}
      <h3 style="text-align: center">
        <strong>Lista de agendamento do Dia</strong>
      </h3>
      <br/>
      {% for a in appointments %}
        <label style="text-align: center">

          {{ a.user.name }}
          <br/>
          {{ a.date }}
          <br/>
          <br/>
        </label>
      {% endfor %}
    {% endif %}
    <a href="/app/logout" class="logout">Sair</a>
  </div>
{% endblock %}
